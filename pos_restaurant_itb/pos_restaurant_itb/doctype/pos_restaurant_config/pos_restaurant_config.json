{
    "name": "POS Restaurant Settings",
    "doctype": "DocType",
    "module": "pos_restaurant_itb",
    "custom": 0,
    "is_submittable": 0,
    "fields": [
        {
            "fieldname": "pos_profile",
            "label": "POS Profile",
            "fieldtype": "Link",
            "options": "POS Profile",
            "reqd": 1,
            "in_list_view": 1,
            "in_standard_filter": 1
        },
        {
            "fieldname": "restaurant_type_section",
            "label": "Restaurant Type",
            "fieldtype": "Section Break"
        },
        {
            "fieldname": "restaurant_type",
            "label": "Service Type",
            "fieldtype": "Select",
            "options": "Full Service\nQuick Service\nCounter Service",
            "reqd": 1,
            "in_list_view": 1,
            "in_standard_filter": 1,
            "description": "Full Service: Complete restaurant management\nQuick Service: Simple table management\nCounter Service: Counter only operations"
        },
        {
            "fieldname": "table_management_section",
            "label": "Table Management",
            "fieldtype": "Section Break",
            "depends_on": "eval:doc.restaurant_type != 'Counter Service'"
        },
        {
            "fieldname": "enable_table_management",
            "label": "Enable Table Management",
            "fieldtype": "Check",
            "default": 0
        },
        {
            "fieldname": "table_groups",
            "label": "Table Groups",
            "fieldtype": "Table",
            "options": "POS Table Group",
            "depends_on": "eval:doc.enable_table_management"
        },
        {
            "fieldname": "qr_section",
            "label": "QR Settings",
            "fieldtype": "Section Break",
            "depends_on": "eval:doc.enable_table_management"
        },
        {
            "fieldname": "qr_type",
            "label": "QR Type",
            "fieldtype": "Select",
            "options": "\nDynamic\nStatic Order\nStatic Menu\nNone",
            "description": "Dynamic: Web ordering enabled\nStatic Order: Print QR + Web order\nStatic Menu: Menu display only\nNone: No QR code"
        },
        {
            "fieldname": "qr_settings_cb",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "qr_box_size",
            "label": "QR Box Size",
            "fieldtype": "Int",
            "depends_on": "eval:doc.qr_type != 'None'",
            "default": 10
        },
        {
            "fieldname": "qr_border",
            "label": "QR Border",
            "fieldtype": "Int",
            "depends_on": "eval:doc.qr_type != 'None'",
            "default": 4
        },
        {
            "fieldname": "monitoring_section",
            "label": "Monitoring Settings",
            "fieldtype": "Section Break",
            "depends_on": "eval:doc.restaurant_type == 'Full Service'"
        },
        {
            "fieldname": "enable_kds",
            "label": "Enable KDS (Outlet Monitoring)",
            "fieldtype": "Check",
            "default": 0,
            "description": "Kitchen Display System for outlet-level order monitoring"
        },
        {
            "fieldname": "kds_refresh_interval",
            "label": "KDS Refresh Interval (seconds)",
            "fieldtype": "Int",
            "default": 30,
            "depends_on": "eval:doc.enable_kds"
        },
        {
            "fieldname": "monitoring_cb",
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "enable_kitchen_stations",
            "label": "Enable Kitchen Stations",
            "fieldtype": "Check",
            "default": 0,
            "description": "Enable item-level kitchen monitoring stations"
        },
        {
            "fieldname": "kitchen_station_settings",
            "label": "Kitchen Station Settings",
            "fieldtype": "Link",
            "options": "Kitchen Station Settings",
            "depends_on": "eval:doc.enable_kitchen_stations",
            "mandatory_depends_on": "eval:doc.enable_kitchen_stations"
        },
        {
            "fieldname": "order_section",
            "label": "Order Settings",
            "fieldtype": "Section Break"
        },
        {
            "fieldname": "order_types",
            "label": "Available Order Types",
            "fieldtype": "Table",
            "options": "POS Order Type"
        }
    ],
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1,
            "export": 1,
            "import": 1
        },
        {
            "role": "Restaurant Manager",
            "read": 1,
            "write": 1,
            "create": 1
        }
    ],
    "search_fields": "pos_profile,restaurant_type",
    "sort_field": "modified",
    "sort_order": "DESC",
    "track_changes": 1
}